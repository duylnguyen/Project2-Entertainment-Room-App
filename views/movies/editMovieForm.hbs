

<h2>Create New Movie Review</h2>

<form method="POST" action="/movies/{{movie._id}}?_method=PUT">
  <div class="form-group">
    <label for="formGroupExampleInput">Type of media</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Type of media" name="type" value="{{movie.type}}" />
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Title</label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Title "name="title" value="{{movie.title}}" />
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Rating</label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Rating" name="rating" value="{{movie.rating}}" />
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Review</label>
    <textarea type="text" class="form-control" id="formGroupExampleInput2" placeholder="Review" name="review" value="{{movie.review}}"></textarea>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Image Link</label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Image Link" name="imgLink" id="img-link" value="{{movie.imgLink}}"/>
  </div>
  <input id="submitBtn" type="submit" value="Create Movie Review" />
</form>

